<div class="col s10 offset-s1 m10 offset-m1 l10 offset-l1">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col s12 m6">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <p class="card-title"><%= product.name %></p>
            <span>Catéorie : </span>
            <div class="chip">
              <%= product.category %>
            </div>
            <p>Ingrédients :</p>
            <p><%= product.ingredients %></p>
          </div>
          <div class="card-action">
            <a href="#" class="btn green darken-1"><i class="material-icons left">mode_edit</i>Modifier</a>
            <a href="#" class="btn-floating btn-large waves-effect rightwaves-light red darken-1"><i class="material-icons">delete</i></a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <a href="/products/new" class="btn "><i class="material-icons left">add</i>Nouveau produit</a>
</div>
