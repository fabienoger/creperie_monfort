<div class="row contact">
  <h1 class="center-align">Contact</h1>
  <% if flash[:success] %>
    <div class="card-panel green text-accent-2">
      <span class="white-text"><%= flash[:success] %></span>
    </div>
  <% end %>
  <% if flash[:error] %>
    <div class="card-panel red darken-1">
      <span class="white-text"><%= flash[:error] %></span>
    </div>
  <% end %>
  <div class="col s12 m6 l6 info">


  </div>
  <div class="col s12 m6 l6 formulaire">
    <%= form_for '/contact', method: 'post' do |f| %>
      <% if @message.errors[:name].first %>
        <div class="card-panel red darken-1 col s12">
          <span class="white-text"><%= @message.errors[:name].first %></span>
        </div>
      <% end %>
      <div class="input-field col s12">
        <i class="material-icons prefix">account_circle</i>
        <input id="name" name="message[name]" type="text" class="validate">
        <label for="name">Nom</label>
      </div>
      <% if @message.errors[:email].first %>
        <div class="card-panel red darken-1 col s12">
          <span class="white-text"><%= @message.errors[:email].first %></span>
        </div>
      <% end %>
      <div class="input-field col s12">
        <i class="material-icons prefix">email</i>
        <input id="icon_prefix email" name="message[email]" type="text" class="validate">
        <label for="email">Email</label>
      </div>
      <% if @message.errors[:content].first %>
        <div class="card-panel red darken-1 col s12">
          <span class="white-text"><%= @message.errors[:content].first %></span>
        </div>
      <% end %>
      <div class="input-field col s12">
        <i class="material-icons prefix">comment</i>
        <textarea id="icon_prefix2 content" name="message[content]" class="materialize-textarea"></textarea>
        <label for="icon-prefix2">Message</label>
      </div>
      <div class="col s12 center-align">
        <button type="submit" class="btn-floating btn-large waves-effect waves-light"><i class="material-icons">email</i></button>
      </div>
    <% end %>
  </div>
</div>
